{% extends 'base.html.twig' %}
{% block title %}Connexion{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/style.css') }}">
    <script crossorigin="anonymous" src="https://kit.fontawesome.com/e90458a561.js"></script>
{% endblock %}

{% block body %}
    {% include 'navbar.html.twig'%}

    <div class="modal-dialog">
        <div class="main-section">
            <div class="modal-content">

                <div class="col-12 user-img" >
                    <img src="{{ asset('assets/image/user-login.png') }}" alt="user" width="200px" height="200px">
                </div>

                <div class="col-12 form-input">
                    <form method="post">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3">
                                Vous êtes connecté en tant que  {{ app.user.username }} <a href="{{ path('app_logout') }}">Se déconnecter</a>
                            </div>

                        {% else %}

                            <div class="form-group">
                                <label for="inputUsername">Identifiant</label>
                                <input type="text" class="form-control" value="{{ last_username }}" name="username" id="inputUsername" required autofocus>
                            </div>

                            <div class="form-group">
                                <label for="inputPassword">Mot de passe</label>
                                <div class="input-group" id="show_hide_password">
                                <input  class="form-control" name="password" id="inputPassword" type="password" required>
                                <a href="" class="bg-light border"><i class="fas fa-eye-slash mt-2" aria-hidden="true"></i></a>
                                </div>
                            </div>

                            <input type="hidden" class="btn btn-primary" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}"> <br>

                            <button type="submit" class="btn btn-primary">
                                Se connecter
                            </button>
                                <div>
                                    <a  href="{{ path('app_forgotten_password') }}">Mot de passe oublié</a>
                                </div>

                    </form>
                        {% endif %}
                </div>
            </div>
        </div>
    </div>

    {% block javascripts %}
        <script src="{{ asset('assets/js/show_hide.js') }}"></script>
    {% endblock %}

{% endblock %}
