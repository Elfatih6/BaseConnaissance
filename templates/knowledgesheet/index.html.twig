{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    {% include 'navbar.html.twig'%}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <div class="container">
        <div class="example-wrapper">
            <h2 class="text-center pt-xl-5 pb-4">Fiche de connaissance</h2>
            <a href="{{ path('knowledgesheet_create') }}">Contribuer</a>
            <div class="search-bar">{{ form(formSearch)}} </div>{# creation de la barre de recherche#}
            <ul>
                {% for knowledgesheet in knowledgesheet %}
                    <div class="knowledge">
                        {#{{ knowledgesheet.id }} ID de la fiche pour le debug #}
                    <li>{{ knowledgesheet.title }}
                        <a href="{{ path('edit',{'id':knowledgesheet.id}) }}">Editer</a> -
                        <a href="{{ path('delete',{'id':knowledgesheet.id}) }}">Supprimer</a>
                    </li>
                    <ul>
                    <li>{{ knowledgesheet.content|raw }}
                    {{ knowledgesheet.keyword }}</li>
                    </ul>
                    </div>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}
